<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="240220-1" author="alexey">
        <createTable tableName="user">
            <column name="id" type="serial" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="name" type="varchar(50)"/>
            <column name="number" type="varchar(15)"/>
            <column name="idd" type="integer"/>
        </createTable>
    </changeSet>

    <changeSet id="240220-2" author="alexey">
        <createTable tableName="price">
            <column name="id" type="serial" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="idd" type="integer"/>
            <column name="isactual" type="boolean"/>
            <column name="name" type="varchar(15)"/>
            <column name="cost" type="double"/>
            <column name="weight" type="integer"/>
            <column name="type_id" type="integer"/>
            <column name="description" type="varchar(50)"/>
        </createTable>
    </changeSet>

    <changeSet id="240220-3" author="alexey">
        <createTable tableName="types">
            <column name="id" type="serial" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(50)">
                <constraints unique="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="240220-4" author="alexey">
        <createTable tableName="orders">
            <column name="id" type="integer" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="idd" type="integer"/>
            <column name="id_user" type="integer"/>
            <column name="id_prices" type="integer"/>
            <column name="count" type="integer"/>
            <column name="sum_prices" type="double"/>
            <column name="cost" type="double"/>
            <column name="address" type="varchar(255)"/>
            <column name="date_create" type="date"/>
            <column name="date_close" type="date"/>
        </createTable>
    </changeSet>
</databaseChangeLog>